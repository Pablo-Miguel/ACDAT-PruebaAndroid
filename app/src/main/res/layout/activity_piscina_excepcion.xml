<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PiscinaExcepcion">

    <Button
        android:id="@+id/btnVaciar"
        android:layout_width="161dp"
        android:layout_height="72dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="23dp"
        android:text="@string/btnVaciar"
        app:layout_constraintBottom_toTopOf="@+id/sldNivel"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLlenar"
        android:layout_width="156dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="23dp"
        android:text="@string/btnLlenar"
        app:layout_constraintBottom_toTopOf="@+id/sldNivel"
        app:layout_constraintEnd_toStartOf="@+id/btnVaciar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="381dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/lblPiscina"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sclRespuesta"
        android:layout_width="383dp"
        android:layout_height="417dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="21dp"
        android:contentDescription="@string/btnSaludar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ScrollView>

    <ListView
        android:id="@+id/listPiscina"
        android:layout_width="148dp"
        android:layout_height="201dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <SeekBar
        android:id="@+id/sldNivel"
        android:layout_width="381dp"
        android:layout_height="62dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/sclRespuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>